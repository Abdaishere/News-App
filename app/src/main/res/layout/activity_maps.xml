<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <ImageView
        android:layout_width="104dp"
        android:layout_height="85dp"
        android:layout_alignRight="@id/currentLoc"
        android:layout_alignBottom="@id/currentLoc"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="315dp"
        android:elevation="12dp"
        android:src="@drawable/ic_pin_foreground" />

    <ImageButton
        android:id="@+id/currentLoc"
        android:layout_width="40sp"
        android:layout_height="43sp"
        android:layout_alignEnd="@id/map"
        android:layout_alignRight="@id/map"
        android:layout_alignBottom="@id/map"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/ic_mylocation_background"
        android:elevation="14dp"
        android:src="@drawable/ic_mylocation_foreground" />


    <ImageButton
        android:id="@+id/apply"
        android:layout_width="40sp"
        android:layout_height="43sp"
        android:layout_alignRight="@id/currentLoc"
        android:layout_alignBottom="@id/currentLoc"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_mylocation_background"
        android:elevation="14dp"
        android:src="@drawable/ic_apply_foreground" />

</RelativeLayout>
